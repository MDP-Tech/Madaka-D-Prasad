<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>{{ page_title }} - {{ shop.name }}</title>

    {{ 'styles.css' | asset_url | stylesheet_tag }}

    {{ content_for_header }}
  </head>

  <body>
    {% section 'header' %}

    <!-- Main Content -->
    <main id="MainContent" role="main">
      {{ content_for_layout }}
    </main>

    {% section 'footer' %}

    <!-- Cart Drawer -->
    {% render 'cart-drawer' %}

    {{ 'theme.js' | asset_url | script_tag }}
    {{ content_for_footer }}
  </body>
</html>
